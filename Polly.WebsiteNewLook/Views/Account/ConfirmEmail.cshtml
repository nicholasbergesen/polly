@{
    ViewBag.Title = "Email Confirmed! :D";
}

<div class="container pt-4">
    <h2>@ViewBag.Title</h2>
    <div>
        <p>
            Thank you for confirming your email. You can now log in.
        </p>
    </div>
</div>

<script>
    //pulse login
    $(function () {
        $("#loginNav").on('click', function () {
            $(this).removeClass('pulsate rounded');
        });

        $("#loginNav").addClass('pulsate rounded');
    });
</script>

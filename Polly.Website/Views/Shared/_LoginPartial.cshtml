@using Polly.Website.Models
@model LoginViewModel

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title">Log in</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="onClose()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="multi-collapse collapse show">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = HttpContext.Current.Request.Url }, FormMethod.Post, new { role = "form", id = "loginForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", id="EmailLoginPartial" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <a href=".multi-collapse" data-toggle="collapse" id="resetLink" class="multi-collapse collapse show">Reset your password</a>
                <div class="collapse multi-collapse">
                    @Html.Partial("_ForgotPasswordPartial", new ForgotPasswordViewModel())
                </div>
            </div>
            <div class="modal-footer justify-content-between bg-light">
                <div>
                    <button type="submit" class="btn btn-outline-success" formaction="/Account/Register">Register</button>
                </div>
                <div>
                    <button type="submit" form="loginForm" class="btn btn-primary multi-collapse collapse show">Log in</button>
                    <button type="button" class="btn btn-secondary" onclick="onClose()" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function onClose() {
        let resetLink = $("#resetLink");
        if (resetLink.is(":hidden")) {
            $(".multi-collapse").collapse("toggle");
        }
    }
</script>
@model Polly.Website.Models.ForgotPasswordViewModel
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "resetForm" }))
{
    @Html.AntiForgeryToken()
 
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Email" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Send password reset link" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

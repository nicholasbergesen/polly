@model ICollection<Polly.Data.PriceHistory>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>

<canvas id="myChart" class="150" height="50"></canvas>


<script>
    @{
        var prices = Model.Select(x => x.Price).ToArray();
        var time = Model.Select(x => x.TimeStamp.ToShortDateString()).ToArray();
    }
    window.onload = function () {
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'line',
            lineTension: 1,
            showLine: true,
            spanGaps: true,
            fill: false,
            data: {
                labels: @Html.Raw(Json.Encode(time)),
                datasets: [{
                    label: 'Price',
                    data: @Html.Raw(Json.Encode(prices)),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                hover: {
                    mode: 'nearest',
                },
                scales: {
                    xAxes: [{
                        display: true,
                        labelString: 'Date'
                    }],
                    yAxes: [{
                        display: true,
                        labelString: 'Price'
                    }]
                }
            }
        });
    }
</script>

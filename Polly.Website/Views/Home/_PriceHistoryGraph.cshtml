@model List<Polly.Website.Models.PriceHistoryModel>
@{
    var prices = Model.Select(x => x.Price).ToArray();
    var time = Model.Select(x => x.TimeStamp.ToShortDateString()).ToArray();
}

<canvas id="myChart" class="pl_priceChart"></canvas>

<script src="~/Scripts/Chart.min.js"></script>

<script type="text/javascript">
    $(function () {
        var graph = new Polly.PriceHistoryGraph({
            data: @Html.Raw(Json.Encode(prices)),
            labels: @Html.Raw(Json.Encode(time)),
        });
    });
</script>

